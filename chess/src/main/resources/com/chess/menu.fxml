<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chess.controller.MenuController">
    <top>
        <BorderPane styleClass="header-section">
            <left>
                <Label id="header-text" text="Chess" />
            </left>
        </BorderPane>
    </top>
    <left>
        <VBox styleClass="sidebar-section">
            <children>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="New Game" onAction="#switchToGameView"/>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Load Game" onAction="#switchToLoadGameView"/>
            </children>
        </VBox>
    </left>
    <center>
        <VBox styleClass="content-section">
            <children>
                <Label id="content-header" text="Chess by Simen Sandhaug" />
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox styleClass="footer-section">
            <children>
                <Label text="Copyright 2023 Simen Kristiansen Sandhaug" />
            </children>
        </HBox>
    </bottom>
   <stylesheets>
      <URL value="@css/global.css" />
      <URL value="@css/menu.css" />
   </stylesheets>
</BorderPane>
